<div class="card border-primary">
    <h5 class="card-header">
        User ID: <%- user.uid %> <hr>
        <%- user.email %>
    </h5>
    <div class="card-body">
      <p class="card-text">User ID: <%- user.uid %></p>
      <p class="card-text">Full Name: <%- user.firstname %> <%- user.lastname %></p>
      <a href="/users/delete/<%- user.uid %>" class="btn btn-secondary">Delete User</a>
    </div>
    <div class="card-footer text-muted">
      Language: <%- user.lang %>
    </div>
</div>